<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<!--  <aconstant name="struts.local" value="zh_CN" />-->
	<package name="default" namespace="/" extends="struts-default">
        <global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>
         
       <action name="user_*" class="edu.tjpu.task.action.UserAction"
			method="{1}">
			<result name="toLogin">login.jsp</result>
			<result name="toAdmin">/WEB-INF/jsp/admin.jsp</result>
			<result name="toMaster">/WEB-INF/jsp/master.jsp</result>
			<result name="toEmp">/WEB-INF/jsp/employee.jsp</result>
			<result name="error">/error.jsp</result>
			<result>/WEB-INF/jsp/admin.jsp</result>

			<result name="toAdd">/WEB-INF/jsp/addUser.jsp</result>
			<result name="toupdate">/WEB-INF/jsp/updateUser.jsp</result>
			<result name="tolist" type="redirectAction">user_listAll</result>

		</action>
		<action name="task_*" class="edu.tjpu.task.action.TaskAction"
			method="{1}">
			<result name="toLogin">login.jsp</result>
			<result name="toMaster">/WEB-INF/jsp/master.jsp</result>
			<result name="toemp">/WEB-INF/jsp/employee.jsp</result>
			<result name="tolist" type="redirectAction">task_listAll</result>
			<result name="error">/error.jsp</result>
			<result name="toadd">/WEB-INF/jsp/addTask.jsp</result>
			<result name="toupdate">/WEB-INF/jsp/updateTask.jsp</result>
			<result>/WEB-INF/jsp/master.jsp</result>
			<result name="listTask">/WEB-INF/jsp/listTask.jsp</result>
			<result name="follow" type="redirectAction">task_listTask</result>
			
			<result name="toplan">/WEB-INF/jsp/listPlan.jsp</result>
		</action>
		<action name="plan_*" class="edu.tjpu.task.action.PlanAction"
			method="{1}">
			<result name="toLogin">login.jsp</result>
			<result>/WEB-INF/jsp/employee.jsp</result>
			<result name="toEmp">/WEB-INF/jsp/employee.jsp</result>
			<result name="listplan" type="redirectAction">plan_myplan</result>
			<result name="error">/error.jsp</result>
			<result name="toadd">/WEB-INF/jsp/addPlan.jsp</result>
			<result name="tomodi">/WEB-INF/jsp/modiPlan.jsp</result>
			<result name="tolist" type="redirectAction">plan_mytask</result>
		</action>
		<action name="feedback_*" class="edu.tjpu.task.action.FeedBackAction"
			method="{1}">
			<result name="toLogin">login.jsp</result>
			<result name="toemp">/WEB-INF/jsp/employee.jsp</result>
			<result name="error">/error.jsp</result>
			<result name="toadd">/WEB-INF/jsp/addFeedBack.jsp</result>
			<result name="tolist" type="redirectAction">feedback_listAll</result>
		</action>
		
		
		
		

	
		
		
		<action name="findTaskById" class="edu.tjpu.task.action.TaskAction" method="findTaskById">
		<result >   updateTask.jsp </result>
		<result name="error"> erro.jsp</result>
		</action>
		
		
        
	</package>
	
   <package name="json" namespace="/json" extends="json-default">
		<action name="user_*" class="edu.tjpu.task.action.UserAction"
			method="{1}">
			<result type="json">
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
				<param name="root">mlist</param>
			</result>
			<result type="json" name="check">
				<param name="noCache">true</param>
				<param name="root">msg</param>
			</result>
		</action>
		<action name="role_*" class="edu.tjpu.task.action.RoleAction"
			method="{1}">
			<result type="json">
				<param name="noCache">true</param>
				<param name="contentType">text/html</param>
				<param name="root">rlist</param>
			</result>
		</action>
		
	</package>

	<!-- Add packages here -->

</struts>
